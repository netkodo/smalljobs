= simple_form_for([:broker, @organization], html: { novalidate: true }) do |f|

  - if notification = f.error_notification
    .alert.alert-danger
      = notification

  %fieldset
    %legend
      = t('legends.organization')
      %i.fa.fa-2x.fa-home.pull-right

    .form-inputs
      = f.input :name, required: true
      = f.input :description, required: true
      = f.input :opening_hours, required: true
      = f.input :street, required: true
      = f.association :place, required: true, collection: current_region.places, include_blank: true

  %fieldset
    %legend
      = t('legends.contact')
      %i.fa.fa-2x.fa-phone.pull-right

    .form-inputs
      = f.input :website
      = f.input :email
      = f.input :phone

  %fieldset
    %legend
      = t('legends.branding')
      %i.fa.fa-2x.fa-phone.pull-right

    .form-inputs
      = f.input :logo, as: :image_preview, input_html: { preview_version: :web }
      -#- if @organization.logo.web.normal.file.exists?
      = f.input :logo_delete, as: :boolean, inline_label: true, label: false
      = f.input :background, as: :image_preview, input_html: { preview_version: :web }
      -#- if @organization.background.file.exists?
      = f.input :background_delete, as: :boolean, inline_label: true, label: false

  %fieldset
    %legend
      = t('legends.seeker_salary')
      %i.fa.fa-2x.fa-money.pull-right

    .form-inputs
      = f.input :default_hourly_per_age

  %fieldset
    %legend
      = t('legends.messages_templates')

    %p
      = t('legends.available_placeholders')
    %ul
      %li
        {{seeker_first_name}}: Vorname des Jugendlichen
      %li
        {{seeker_last_name}}: Nachname des Jugendlichen
      %li
        {{seeker_link_to_agreement}}:
      %li
        {{provider_first_name}}: Vorname des Anbieter
      %li
        {{provider_last_name}}: Nachname des Anbieter
      %li
        {{broker_first_name}}: Vorname des Vermittler
      %li
        {{broker_last_name}}: Nachname des Vermittler
      %li
        {{organization_name}}:
      %li
        {{organization_zip}}:
      %li
        {{organization_street}}:
      %li
        {{organization_place}}:

    .form-inputs
      = f.input :welcome_letter_employers_msg
      = f.input :welcome_app_register_msg
      = f.input :welcome_chat_register_msg

  .form-actions
    = f.button :submit, t('common.edit'), class: 'btn btn-primary'

%ul.nav.nav-pills
  %li= link_to t('common.back'), broker_dashboard_path
