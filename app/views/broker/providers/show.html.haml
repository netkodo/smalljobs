%h1= t('providers.show.title', name: @provider.name)
%p.lead= t('providers.show.lead')

.panel.panel-default
  .panel-body
    .label.label-info= t("contacts.#{ @provider.contact_preference }")
    .status.pull-right= provider_label(@provider)

    .row
      .col-sm-6
        .address
          %strong= @provider.name
          %br

          = @provider.street
          %br

          = "#{ @provider.place.zip } #{ @provider.place.name }"
          %br
          %br

          - if @provider.phone
            %abbr{ title: t('activerecord.attributes.provider.phone') } T:
            = @provider.phone.phony_formatted
            %br

          - if @provider.mobile
            %abbr{ title: t('activerecord.attributes.provider.mobile') } M:
            = @provider.mobile.phony_formatted
            %br

          - if @provider.email
            %a{ href: 'mailto:#' }= @provider.email
            %br

      .col-sm-6
        %br

        - if @provider.contact_availability.present?
          .well.well-sm
            = @provider.contact_availability

%ul.nav.nav-pills
  %li= link_to t('common.edit'), edit_broker_provider_path(@provider)
  %li= link_to t('common.back'), broker_providers_path
