- all_allocations = @allocations.where(job: @job)

- allocations = all_allocations.application_open
- first = true
- for allocation in allocations
  - if first
    %h5= "Bewerbungen"
    - first = false
  %p
    = link_to "#{allocation.seeker.name}", broker_job_allocation_path(@job, allocation.seeker)

