%div
  #loader.loader
%div#table


:javascript

   function removeLoader(){
    $( "#loader" ).fadeOut(500, function() {
      $( "#loader" ).remove();
    });
  }

  $(window).load(function(){
    $.ajax({
          url: '/broker/dashboard/show_table',
          type: 'GET',
          cache: false,
          dataType: 'html',
          success: function(response) {
            setTimeout(removeLoader)
            $('#table').html(response)
          }
      });
  });



