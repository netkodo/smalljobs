next_page = $('.js-active-tab > .active > a').data('page') + 1


if ( $(location).attr('hash') == "#todos" ||  $(location).attr('hash') == "" || $(location).attr('hash') == "#todo_current" || $(location).attr('hash') == "#todo_postponed") {
        $('#todos_body').append('<%= j render @todos %>');
        $('.pagination').replaceWith('<%= j will_paginate @todos, renderer: BootstrapPagination::Rails %>');
        $('.js-active-tab > .active > a').data('page', next_page)

} else if ( $(location).attr('hash') == "#jobs" )  {
        $('#jobs_body').append('<%= j render @jobs %>');
