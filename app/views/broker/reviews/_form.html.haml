= simple_form_for([:broker, @job, @review], html: { novalidate: true }) do |f|

  - if notification = f.error_notification
    .alert.alert-danger
      = notification

  %fieldset
    %legend
      = t('legends.review')
      %i.fa.fa-2x.fa-envelope.pull-right

    .form-inputs
      = f.association :provider, required: true, collection: current_region.providers, include_blank: true
      = f.association :seeker, required: true, collection: current_region.seekers, include_blank: true
      = f.input :rating, collection: 0..5, include_blank: false
      = f.input :message

  .form-actions
    - if @review.new_record?
      = f.button :submit, t('common.create'), class: 'btn btn-primary'
    - else
      = f.button :submit, t('common.edit'), class: 'btn btn-primary'
