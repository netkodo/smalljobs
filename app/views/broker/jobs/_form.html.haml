= simple_form_for([:broker, @job], html: { novalidate: true }) do |f|

  - if notification = f.error_notification
    .alert.alert-danger
      = notification

  %fieldset
    .form-inputs
      = f.input :state, as: :radio_buttons, collection: [{value: 'hidden', label: "Prüfen"}, {value: 'public', label: "Öffentlich"}, {value: 'running', label: "Versteckt"}, {value: 'feedback', label: "Abgeschlossen"}], label_method: ->(obj){obj[:label]}, value_method: ->(obj){obj[:value]}, label: false, inline_label: '', item_wrapper_class: 'radio-inline'

  %fieldset
    .form-inputs
      = f.input :title, required: true, label: false
    %p= "Erstellt: #{@job.created_at.strftime("%d.%m.%Y")}"

  %fieldset
    %legend
      = "Notizen (nur intern sichtbar)"
    .form-inputs
      = f.input :notes, label: false

  %fieldset
    %legend
      = "Anbieter"
    %p
      = @job.provider.name
      %br
      = @job.provider.phone
      %br
      = @job.provider.street
      %br
      = @job.provider.place.custom_name

  %fieldset
    %legend
      = "lange Beschreibung"
    .form_inputs
      = f.input :long_description, label: false

  %fieldset
    %legend
      = "kurze Beschreibung"
    .form_inputs
      = f.input :short_description, label: false

  %fieldset
    %legend
      = "Arbeitsart"

    .form-inputs
      -#= f.association :provider, required: true, autofocus: true, collection: current_region.providers, include_blank: false
      = f.association :work_category, required: true, include_blank: false, label: false

  %fieldset
    %legend
      = t('legends.date')

    .form-inputs
      = f.input :date_type, collection: job_date_types, include_blank: false, label: false
      = f.input :start_date, include_blank: true
      = f.input :end_date, include_blank: true

  %fieldset
    %legend
      = t('legends.salary')

    .form-inputs
      = f.input :salary_type, collection: job_salary_types, include_blank: false, label: false
      = f.input :salary, required: true, input_html: { value: @job.try(:salary) || current_region.organizations.first.default_hourly_per_age }

  %fieldset
    %legend
      = "Jugendliche"

    .form-inputs
      = f.input :manpower, require: true, label: "Benötigte Arbeitskräfte:"
      = f.input :duration, require: true, label: "Ungefähre Dauer (Stunden):", hint: false

  %fieldset
    %legend
      = "Zuständige Organisation"
    .form-inputs
      = f.association :organization, require: true, collection: current_region.organizations.order(:name).distinct, label: false, include_blank: false

  .form-actions
    - if @job.new_record?
      = f.button :submit, t('common.create'), class: 'btn btn-primary'
    - else
      = f.button :submit, t('common.edit'), class: 'btn btn-primary'
