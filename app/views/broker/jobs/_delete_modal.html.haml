%div.modal.fade{id: "delete_job_modal"}
  %div.modal-dialog
    %div.modal-content
      %div.modal-header
        -#%button.close{"data-dismiss": "modal", type: "button"} &times;
        %h2= "Wirklich l√∂schen?"
      %div.modal-body
        %div.row
          %div.col-md-6
            %button.btn.btn-success{id: 'delete', type: "button"}
              = "Ja"
          %div.col-md-6
            %button.btn.btn-success{"data-dismiss": "modal", type: "button"}
              = "Nein"

:javascript
  $(document).ready(function() {
      $("#delete").click(function(){
        $.ajax({
          url: "#{delete_broker_job_path(@job)}",
          type: 'DELETE',
          success: function(result) {
             window.location.href = "#{broker_dashboard_path}#jobs";
          }
        });
      });
  });