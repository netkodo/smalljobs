%div.modal.fade{id: "message_modal"}
  %div.modal-dialog
    %div.modal-content
      %div.modal-header
        %button.close{"data-dismiss": "modal", type: "button"} &times;
        %h2= "Nachricht senden"
      %div.modal-body
        %input{type: "checkbox", checked: "true"}
          = "Nachricht an "
          = @seeker.name
          = ":"
        %textarea.form-control.resize-vertical
          = ""
        %br
        - if @seeker.app_user_id.nil?
          %p
            = "Keine App f√ºr Messaging installiert. Per Telefon Kontakt aufnehmen"
            %a{href: "tel:#{@seeker.mobile}"}
              = @seeker.mobile
        %button.btn.btn-success.btn-send
          = "Nachricht senden"
      %div.modal-footer
        = render 'messages'