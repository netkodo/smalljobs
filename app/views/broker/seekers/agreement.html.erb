      font-weight: 700;
    }

    p.bottom-txt {
      position: absolute;
      bottom: 33px;
      left: 31px;
      font-weight: 700;
    }

    p.small-star {
      margin-top: 87px;
      font-size: 13px;
      margin-left: 32px;
      font-weight: 700;
    }

    .center.qr {
      width: 174px;
      height: 174px;
      position: absolute;
      left: 50%;
      margin-left: -95px;
      border: 5px solid #07b571;
      top: 150px;
    }

    .center.qr img {
      left: 50%;
      top: 50%;
      position: absolute;
      margin-top: -42px;
      margin-left: -46px;
      width: 90px;
    }

    h1.provider-name {
      margin-left: 93px;
      font-size: 15px;
      margin-top: 20px;
      font-weight: 400;
      line-height: 1.4;
    }

    h1.arbei {
      margin-left: 37px;
      font-size: 21px;
      font-weight: 700;
      margin-top: 368px;
      margin-bottom: 5px;
    }

    h1.page2-secondheader {
      margin-left: 37px;
      font-size: 21px;
      font-weight: 700;
      margin-top: 35px;
    }

    #page2 ol {
      margin-top: 15px;
    }

    #page2 ol li {
      margin-left: 13px;
      margin-bottom: 3px;
      padding-left: 7px !important;
      line-height: 1.2;
    }

    #page2 table {
      margin-left: 37px;
      margin-right: 37px;
      width: 719px;
    }

    #page2 table tbody {
      background: #fff;
    }

    #page2 table thead {
      background: #ecf6ee;
    }

    #page2 table thead tr th {
      font-size: 13px;
      font-weight: 700;
      border: 0px !important;
      padding-top: 4px;
    }

    #page2 table tr td {
      border: 1px solid #cbe7d5;
      padding: 3px;
      padding: 10px 3px;
      font-size: 13px;
      border-left: 0px !important;
      border-right: 0px !important;
    }

    #page4 ol {
      margin-top: 15px;
    }

    #page4 ol li {
      margin-left: 13px;
      margin-bottom: 3px;
      padding-left: 7px !important;
      line-height: 1.2;
    }

    #page4 table {
      margin-left: 37px;
      margin-right: 37px;
      width: 719px;
    }

    #page4 table tbody {
      background: #fff;
    }

    #page4 table thead {
      background: #ecf6ee;
    }

    #page4 table thead tr th {
      font-size: 13px;
      font-weight: 700;
      border: 0px !important;
      padding-top: 4px;
    }

    #page4 table tr td {
      border: 1px solid #cbe7d5;
      padding: 3px;
      padding: 10px 3px;
      font-size: 13px;
      border-left: 0px !important;
      border-right: 0px !important;
    }

    #page3 table {
      margin-left: 37px;
      margin-right: 37px;
      width: 719px;
      position: absolute;
      top: 425px;
      left: -5px;
    }

    #page3 table tbody {
      background: #fff;
    }

    #page3 table thead {
      background: #ecf6ee;
    }

    #page3 table thead tr th {
      font-size: 13px;
      font-weight: 700;
