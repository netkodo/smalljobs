<!doctype html>
<html>
<head>
  <meta charset='utf-8'/>
  <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700" rel="stylesheet">
  <style>
    body {
      width: 100%;
      height: 100%;
      margin: 0;
      padding: 0;
      /*background-color: #FAFAFA;*/
      font-family: 'Lato', sans-serif;
    }

    div.alwaysbreak {
      page-break-before: always;
    }

    #logo-white {
      position: absolute;
      right: 40px;
      max-width: 90px;
      top: 40px;
    }

    div.nobreak:before {
      clear: both;
    }

    div.nobreak {
      page-break-inside: avoid;
    }

    div.page {
      position: relative;
      width: 210mm;
      min-height: 297mm;
      display: inline-block;
    }

    @page {
      size: A4;
      margin: 0;
    }

    .row {
      display: table;
      width: 100%;
      table-layout: fixed;
      border-spacing: 10px;
    }

    .column {
      display: table-cell;
    }

    .signature {
      height: 17mm;
      background-color: rgb(235, 246, 238);
      border-bottom: 2px solid #d1ebdc;
    }

    .bottom {
      position: relative;
      bottom: 0;
    }

    .right {
      position: relative;
      right: 0;
    }

    #page3.table.tbody.tr {
      height: 5mm;
    }

    .bottom.right {
      position: absolute;
      display: inline-block;
      bottom: 25px;
      right: 37px;
      font-size: 14px;
      font-weight: 700;
    }

    #logo {
      position: absolute;
      top: 37px;
      right: 32px;
      max-width: 95px;
    }

    p.org-name {
      margin-top: 175px;
      font-size: 15px;
      font-weight: 400;
      margin-left: 93px;
      border-bottom: 1px solid #000;
      display: inline-block;
    }

    p.contact-info {
      margin-left: 93px;
      margin-top: 58px;
      line-height: 1.4;
      font-size: 15px;
    }

    p.letter-start {
      margin-left: 93px;
      margin-top: 56px;
      font-size: 15px;
    }

    p.second-paragraph {
      margin-top: 25px;
      font-size: 15px;
      margin-right: 93px;
      line-height: 1.4;
    }

    p.third-paragraph {
      margin-top: 25px;
      font-size: 15px;
      margin-right: 93px;
      line-height: 1.4;
    }

    p.forth-paragraph {
      margin-top: 20px;
      font-size: 15px;
      margin-right: 93px;
      line-height: 1.4;
    }

    p.letter-end {
      margin-top: 23px;
      font-size: 15px;
    }

    p.sign-dots {
      margin-top: 40px;
      font-size: 15px;
    }

    p.sign-data {
      margin-top: -5px;
      font-size: 15px;
      line-height: 1.4;
    }

    p.page2-firstrow {
      margin-left: 37px;
      font-size: 21px;
      font-weight: 800;
      margin-top: -5px;
    }

    p.small-stars {
      font-size: 12px;
      font-weight: 700;
      margin-top: 7px;
    }

    p.page2-secondrow {
      margin-left: 37px;
      margin-top: -6px;
      font-size: 14px;
      font-weight: 700;
    }

    p.sign-par {
      margin-left: 26px;
