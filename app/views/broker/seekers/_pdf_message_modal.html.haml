%div.modal.fade{id: "pdf_message_modal"}
  %div.modal-dialog
    %div.modal-content
      %div.modal-header
        %button.close{"data-dismiss": "modal", type: "button"} &times;
        %h2= "Elterneinverständnis als Pdf schicken"
      %div.modal-body
        %input{type: "checkbox", checked: "true"}
          = "Nachricht an "
          = @seeker.name
          = ":"
        %div.form-control.resize-vertical.textarea{contenteditable: true}
          = "Hoi #{@seeker.firstname}"
          %br
          = "Willkommen bei Smalljobs!"
          %br
          = "Bitte "
          %a{href: "#{url_for agreement_broker_seeker_url(@seeker)}?format=pdf"}= "#{url_for agreement_broker_seeker_url(@seeker)}?format=pdf"
          = " runterladen uns bringen:"
          %br
          %a{href: "mailto:#{current_broker.email}"}= "#{current_broker.email}"
          %br
          = "Merci,"
          %br
          = "#{current_broker.firstname}"
        %br
        - if @seeker.app_user_id.nil?
          %p
            = "Keine App für Messaging installiert. Per Telefon Kontakt aufnehmen"
            %a{href: "tel:#{@seeker.mobile}"}
              = @seeker.mobile
        %button.btn.btn-success.btn-send
          = "Elterneinverständnis als Pdf schicken"
      %div.modal-footer
        = render 'messages'