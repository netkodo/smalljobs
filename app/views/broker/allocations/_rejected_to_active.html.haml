%div.modal.fade{id: "rejected_to_active_modal"}
  %div.modal-dialog
    %div.modal-content
      %div.modal-header
        %button.close{"data-dismiss": "modal", type: "button"} &times;
        %h2= "Anstellen"
      %div.modal-body
        %input{type: "checkbox", checked: "true"}
          = "Nachricht an "
          = @allocation.seeker.name
          = ":"
        %textarea.form-control.resize-vertical
          = "Hallo #{@allocation.seeker.name}"
          = "Du hast den Job =@job.title erhalten! Melde dich doch so schnell wie m√∂glich unter =@provider.phone oder =@provider.mobile"
        %br
        %button.btn.btn-success.change_state
          = "Anstellen"
      %div.modal-footer
        = render 'messages'