%div.modal.fade{id: "finished_to_active_modal"}
  %div.modal-dialog
    %div.modal-content
      %div.modal-header
        %button.close{"data-dismiss": "modal", type: "button"} &times;
        %h2= "Anstellung Reaktivieren"
      %div.modal-body
        %input{type: "checkbox", checked: "true"}
          = "Nachricht an "
          = @allocation.seeker.name
          = ":"
        %textarea.form-control.resize-vertical
          = "Finished/cancelled to active"
        %br
        %button.btn.btn-success.change_state
          = "Anstellung Reaktivieren"
      %div.modal-footer
        = render 'messages'