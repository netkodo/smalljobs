.jumbotron
  %h1= t('pages.home.teaser')
  %p.lead= t('pages.home.lead')
  .row.signup
    .col-lg-6
      = link_to t('pages.home.signup_provider'), new_provider_registration_path, class: 'btn btn-lg btn-success'
    .col-lg-6.top-buffer
      = link_to t('pages.home.signup_seeker'), new_seeker_registration_path, class: 'btn btn-lg btn-success'

.row.marketing
  .col-lg-6
    %h4
      %i.fa.fa-5x.fa-star
      = t('pages.home.marketing.feature_title_1')
    %p= t('pages.home.marketing.feature_text_1')

    %h4
      %i.fa.fa-5x.fa-map-marker
      = t('pages.home.marketing.feature_title_2')
    %p= t('pages.home.marketing.feature_text_2')

    %h4
      %i.fa.fa-5x.fa-smile-o
      = t('pages.home.marketing.feature_title_3')
    %p= t('pages.home.marketing.feature_text_3')

  .col-lg-6
    %h4
      %i.fa.fa-5x.fa-home
      = t('pages.home.marketing.feature_title_4')
    %p= t('pages.home.marketing.feature_text_4')

    %h4
      %i.fa.fa-5x.fa-thumbs-up
      = t('pages.home.marketing.feature_title_5')
    %p= t('pages.home.marketing.feature_text_5')

    %h4
      %i.fa.fa-5x.fa-leaf
      = t('pages.home.marketing.feature_title_6')
    %p= t('pages.home.marketing.feature_text_6')
