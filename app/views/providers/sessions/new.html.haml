%h2= I18n.t('providers.sessions.title')
%p= I18n.t('providers.sessions.lead')

= simple_form_for(resource, as: resource_name, url: new_session_path(resource_name), html: { novalidate: true }) do |f|

  .form-inputs
    = f.input :username, required: false, autofocus: true
    = f.input :password, required: false
    = f.input :remember_me, as: :boolean if devise_mapping.rememberable?

  .form-actions
    = f.button :submit, I18n.t('providers.sessions.action'), class: 'btn btn-primary'

= render 'devise/shared/links'
