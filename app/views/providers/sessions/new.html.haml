%h2= t('providers.sessions.title')
%p.lead= t('providers.sessions.lead')

= simple_form_for(resource, as: resource_name, url: new_session_path(resource_name), html: { novalidate: true }) do |f|

  .form-inputs
    = f.input :email, required: false, autofocus: true
    = f.input :password, required: false
    = f.input :remember_me, as: :boolean, label: false, inline_label: t('providers.sessions.remember_me') if devise_mapping.rememberable?

  .form-actions
    = f.button :submit, t('providers.sessions.action'), class: 'btn btn-primary'

= render 'devise/shared/links'
:javascript
  window.location.href= '/sign_in'
